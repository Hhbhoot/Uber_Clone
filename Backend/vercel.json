{
  "version": 2,
  "builds": [
    {
      "src": "Backend/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/$1"
    }
  ]
}
